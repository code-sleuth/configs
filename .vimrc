" Show line numbers
set number

" Turn on syntax highlighting
syntax on

" Show file stats
set ruler

" Auto indent
set autoindent

" Blink cursor on error instead of beeping (grr)
set visualbell

" Handle Whitespace
set wrap
set textwidth=79
set formatoptions=tcqrn1
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set noshiftroun

